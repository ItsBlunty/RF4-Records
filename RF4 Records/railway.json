{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "cd backend && python start_server.py",
    "healthcheckPath": "/api",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "variables": {
    "BROWSER_WEBDRIVER_ENDPOINT_PRIVATE": "${{Browserless.BROWSER_WEBDRIVER_ENDPOINT_PRIVATE}}",
    "BROWSER_TOKEN": "${{Browserless.BROWSER_TOKEN}}"
  },
  "environments": {
    "production": {
      "variables": {
        "BROWSER_WEBDRIVER_ENDPOINT_PRIVATE": "${{Browserless.BROWSER_WEBDRIVER_ENDPOINT_PRIVATE}}",
        "BROWSER_TOKEN": "${{Browserless.BROWSER_TOKEN}}"
      }
    }
  }
} 